@article{ ISI:000277423900003,
Author = {Sanfiorenzo-Barnhard, Colibri and Garcia-Barrios, Luis and
   Melendez-Ackerman, Elvia and Trujillo-Vasquez, Romeo},
Title = {{Woody Cover and Local Farmers' Perceptions of Active Pasturelands in La
