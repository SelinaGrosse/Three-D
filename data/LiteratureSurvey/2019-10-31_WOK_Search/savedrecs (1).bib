@article{ ISI:000389115600010,
Author = {WallisDeVries, Michiel F. and Noordijk, Jinze and Colijn, Ed O. and
   Smit, John T. and Veling, Kars},
Title = {{Contrasting responses of insect communities to grazing intensity in
   lowland heathlands}},
Journal = {{AGRICULTURE ECOSYSTEMS \& ENVIRONMENT}},
Year = {{2016}},
Volume = {{234}},
Number = {{SI}},
Pages = {{72-80}},
