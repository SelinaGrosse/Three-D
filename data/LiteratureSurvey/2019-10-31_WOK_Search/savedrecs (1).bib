@article{ ISI:000394142900032,
Author = {van Dobben, Han F. and Wamelink, G. W. Wieger and Slim, Pieter A. and
   Kaminski, Jan and Piorkowski, Hubert},
Title = {{Species-rich grassland can persist under nitrogen-rich but
   phosphorus-limited conditions}},
