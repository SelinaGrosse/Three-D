@article{ ISI:000428725500002,
Author = {Horstman, Eric and Ayon, Jhony and Griscom, Heather},
Title = {{Growth, survival, carbon rates for some dry tropical forest trees used
   in enrichment planting in the Cerro Blanco protected forest on the
   Ecuadorian coast}},
Journal = {{JOURNAL OF SUSTAINABLE FORESTRY}},
Year = {{2018}},
