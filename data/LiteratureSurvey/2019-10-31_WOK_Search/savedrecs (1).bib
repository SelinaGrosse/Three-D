@article{ ISI:000389115600009,
Author = {Polchaninova, Nina and Savchenko, Galina and Drogvalenko, Alexander and
   Ronkin, Vladimir and Shabanov, Dmitry},
Title = {{The impact of cattle grazing on cursorial spiders (Aranei) and true bugs
   (Heteroptera) in steppe gullies of northeastern Ukraine}},
Journal = {{AGRICULTURE ECOSYSTEMS \& ENVIRONMENT}},
Year = {{2016}},
Volume = {{234}},
