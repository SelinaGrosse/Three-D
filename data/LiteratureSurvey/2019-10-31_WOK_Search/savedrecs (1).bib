Title = {{Springtails (Collembola) in meadows, pastures and road verges in Central
   Finland}},
Journal = {{ENTOMOLOGICA FENNICA}},
Year = {{2017}},
Volume = {{28}},
Number = {{3}},
Pages = {{157-163}},
Month = {{AUG}},
Abstract = {{Understanding of species distribution, abundance and habitat affinities
   is crucial for red-list assessment, conservation and habitat management.
   In Central Finland, we studied Collembola in three habitat types, namely
   non-grazed meadows, pastures and road verges using pitfall traps.
