@article{ ISI:000419410100010,
Author = {Boye, Aurelien and Legendre, Pierre and Grall, Jacques and Gauthier,
   Olivier},
Title = {{Constancy despite variability: Local and regional macrofaunal diversity
   in intertidal seagrass beds}},
