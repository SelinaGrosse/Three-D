@article{ ISI:000401376100017,
Author = {Pienaar, Elizabeth F. and Rubino, Elena C. and Saayman, Melville and van
   der Merwe, Petrus},
Title = {{Attaining sustainable use on private game ranching lands in South Africa}},
Journal = {{LAND USE POLICY}},
