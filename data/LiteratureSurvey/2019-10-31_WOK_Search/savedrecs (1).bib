@article{ ISI:000403676000008,
Author = {Michielsen, Mathias and Szemak, Laszlo and Fenesi, Annamaria and Nijs,
   Ivan and Ruprecht, Eszter},
Title = {{Resprouting of woody species encroaching temperate European grasslands
   after cutting and burning}},
Journal = {{APPLIED VEGETATION SCIENCE}},
