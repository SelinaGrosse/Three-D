@article{ ISI:000448875500003,
Author = {Zagorodniuk, I and Korobchenko, M. and Parkhomenko, V and Barkaszi, Z.},
Title = {{Steppe rodents at the edge of their range: A case study of Spalax
   microphthalmus in the north of Ukraine}},
