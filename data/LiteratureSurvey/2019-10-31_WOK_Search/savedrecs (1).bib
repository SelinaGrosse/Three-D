@article{ ISI:000415271600013,
Author = {Henning, Katrin and Lorenz, Antje and von Oheimb, Goddert and Haerdtle,
   Werner and Tischew, Sabine},
Title = {{Year-round cattle and horse grazing supports the restoration of
   abandoned, dry sandy grassland and heathland communities by supressing
   Calamagrostis epigejos and enhancing species richness}},
Journal = {{JOURNAL FOR NATURE CONSERVATION}},
