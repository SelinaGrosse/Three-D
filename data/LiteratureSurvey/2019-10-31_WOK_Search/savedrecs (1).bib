@article{ ISI:000445554600012,
Author = {Nolan, Rachael H. and Vesk, Peter A. and Robinson, Doug},
Title = {{Recovery potential of microwetlands from agricultural land uses}},
Journal = {{ECOLOGICAL MANAGEMENT \& RESTORATION}},
