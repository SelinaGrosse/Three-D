@article{ ISI:000397550100039,
Author = {Meyer, Sandro and Unternahrer, Debora and Arlettaz, Raphael and Humbert,
   Jean-Yves and Menz, Myles H. M.},
Title = {{Promoting diverse communities of wild bees and hoverflies requires a
   landscape approach to managing meadows}},
Journal = {{AGRICULTURE ECOSYSTEMS \& ENVIRONMENT}},
