@article{ ISI:000410998000016,
Author = {Hoyle, Helen and Jorgensen, Anna and Warren, Philip and Dunnett, Nigel
   and Evans, Karl},
Title = {{``Not in their front yard{''} The opportunities and challenges of
   introducing perennial urban meadows: A local authority stakeholder
   perspective}},
