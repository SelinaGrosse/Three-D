@article{ ISI:000391862900020,
Author = {Firn, Jennifer and Schuetz, Martin and Huong Nguyen and Risch, Anita C.},
Title = {{Herbivores sculpt leaf traits differently in grasslands depending on
   life form and land-use histories}},
Journal = {{ECOLOGY}},
