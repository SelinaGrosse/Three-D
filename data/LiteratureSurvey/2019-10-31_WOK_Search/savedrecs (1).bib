@article{ ISI:000419224200008,
Author = {Fox, John Tyler and Vandewalle, Mark E. and Alexander, Kathleen A.},
Title = {{Land Cover Change in Northern Botswana: The Influence of Climate, Fire,
   and Elephants on Semi-Arid Savanna Woodlands}},
