@article{ ISI:000394698100002,
Author = {Tonelli, Mattia and Verdu, Jose R. and Zunino, Mario E.},
Title = {{Effects of grazing intensity and the use of veterinary medical products
   on dung beetle biodiversity in the sub-mountainous landscape of Central
   Italy}},
