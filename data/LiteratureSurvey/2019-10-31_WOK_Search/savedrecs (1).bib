@article{ ISI:000452065200010,
Author = {Brooke, Christopher F. and Kraaij, Tineke and Venter, Jan A.},
Title = {{CHARACTERIZING A POACHER-DRIVEN FIRE REGIME IN LOW-NUTRIENT COASTAL
   GRASSLANDS OF PONDOLAND, SOUTH AFRICA}},
